{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "StreamBuddy",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "startDragging": true,
        "setAlwaysOnTop": true
      },
      "process": {
        "exit": true
      },
      "shell": {
        "open": ".+"
      },  
      "fs": {
        "createDir": true,
        "removeDir": true,
        "exists": true,
        "readFile": true,
        "writeFile": true,
        "scope": [
          "$RESOURCE",
          "$RESOURCE/**",
          "$APPCONFIG",
          "$APPCONFIG/**"
        ]
      },
      "path": {
        "all": true
      },
      "protocol": {
        "asset": true,
        "assetScope": [
          "$RESOURCE",
          "$RESOURCE/**",
          "$APPCONFIG",
          "$APPCONFIG/**"
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "nsis",
      "identifier": "com.gpiskas.streambuddy",
      "shortDescription": "StreamBuddy",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "resources/*"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "StreamBuddy",
        "fullscreen": false,
        "resizable": false,
        "width": 400,
        "height": 350,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "fileDropEnabled": false
      }
    ]
  }
}